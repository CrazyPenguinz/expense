<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="340.0" prefWidth="368.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BookController">
   <children>
      <TextField fx:id="describe" layoutX="23.0" layoutY="47.0" prefHeight="25.0" prefWidth="152.0" promptText="describe" />
      <TextField fx:id="amt" layoutX="25.0" layoutY="82.0" prefHeight="25.0" prefWidth="86.0" promptText="amount" />
      <ChoiceBox fx:id="type" layoutX="23.0" layoutY="118.0" prefHeight="25.0" prefWidth="86.0" />
      <Button fx:id="addButton" layoutX="130.0" layoutY="118.0" mnemonicParsing="false" onAction="#addBtnOnAction" prefHeight="25.0" prefWidth="45.0" text="Add" />
      <TableView fx:id="tableView" layoutX="215.0" prefHeight="340.0" prefWidth="152.0">
        <columns>
          <TableColumn fx:id="detail" prefWidth="75.0" text="Details" />
          <TableColumn fx:id="amount" prefWidth="75.0" text="Money" />
        </columns>
      </TableView>
      <Label fx:id="label" layoutX="33.0" layoutY="146.0" prefHeight="169.0" prefWidth="152.0" />
      <Button fx:id="totalButton" layoutX="131.0" layoutY="158.0" mnemonicParsing="false" onAction="#showTotal" text="Total" />
      <Button fx:id="swButton" layoutX="15.0" layoutY="158.0" mnemonicParsing="false" onAction="#switchDB" text="Switch DataBase" />
   </children>
</AnchorPane>
